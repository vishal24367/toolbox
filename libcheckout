function checkout() {
  local use_cache=${1:-""}
  if [ -z $NEETO_CI_GIT_BRANCH ] || [ -z $NEETO_CI_GIT_URL ] || [ -z $NEETO_CI_GIT_DIR ] || [ -z $NEETO_CI_GIT_SHA ]; then
    checkout::validation_message
    return 1
  fi

  rm -rf "$NEETO_CI_GIT_DIR"

  if [ "$use_cache" = "--use-cache" ]; then
    echo "[Experimental stability] Using cached Git repository."
    checkout::use_cache
  else
    if [ ! -z ${NEETO_CI_GIT_REF_TYPE:-} ]; then
      checkout::refbased
    else
      checkout::shallow
    fi

    exit_code=$?
    if [ "$exit_code" -ne "0" ]; then
      checkout::metric 0
    fi

    return $exit_code
  fi
}

function checkout::validation_message() {
  echo "[CHECKOUT ERROR] Some of these variables are unset:"
  echo "NEETO_CI_GIT_URL=$NEETO_CI_GIT_URL"
  echo "NEETO_CI_GIT_DIR=$NEETO_CI_GIT_DIR"
  echo "NEETO_CI_GIT_BRANCH=$NEETO_CI_GIT_BRANCH"
  echo "NEETO_CI_GIT_SHA=$NEETO_CI_GIT_SHA"
}

function checkout::use_cache() {
  export CACHE_FAIL_ON_ERROR="true"
  cache restore git-cache-

  if [ "$?" -ne "0" ]; then
    echo "Failed to restore from the cache"
    rm -rf $NEETO_CI_GIT_DIR
  fi

  if [ -d "$HOME/$NEETO_CI_GIT_DIR" ]; then
    checkout::fetch
  else
    checkout::clone
  fi

  if [ "$?" -eq "0" ]; then
    checkout::cache_store
  else
    return 1
  fi
}

function checkout::fetch() {
  echo "Restored cache"
  cd $HOME/$NEETO_CI_GIT_DIR
  git remote prune origin
  retry git fetch --tags origin

  checkout::switch_revision
}

function checkout::clone() {
  retry git clone $NEETO_CI_GIT_URL $NEETO_CI_GIT_DIR
  cd $NEETO_CI_GIT_DIR

  checkout::switch_revision
}

function checkout::reset_to_sha {
  checkout::checkrevision
  if [ "$?" -eq "0" ]; then
    git reset --hard $NEETO_CI_GIT_SHA 2>/dev/null
    checkout::metric "$(du -s . | awk '{ print $1 }')"
    return 0
  else
    return 1
  fi
}

function checkout::switch_revision() {
  if [ ${NEETO_CI_GIT_REF_TYPE:-""} = "pull-request" ]; then
    retry git fetch origin +$NEETO_CI_GIT_REF: 2>/dev/null
    if [ $? -ne 0 ]; then
      echo "Reference: ${NEETO_CI_GIT_REF} not found .... Exiting"

      return 1
    else
      checkout::reset_to_sha
    fi

  elif [ ${NEETO_CI_GIT_REF_TYPE:-""} = "tag" ]; then
    git checkout -qf $NEETO_CI_GIT_TAG_NAME
    if [ $? -ne 0 ]; then
      echo "Release $NEETO_CI_GIT_TAG_NAME not found .... Exiting"

      return 1
    else
      checkout::metric "$(du -s . | awk '{ print $1 }')"
      echo "HEAD is now at ${NEETO_CI_GIT_SHA} Release ${NEETO_CI_GIT_TAG_NAME}"

      return 0
    fi

  else
    local branch_ref="refs/heads/$NEETO_CI_GIT_BRANCH"
    local branch_origin="origin/$NEETO_CI_GIT_BRANCH"

    if [[ -n $(git show-ref $NEETO_CI_GIT_REF) ]]; then
      git checkout $NEETO_CI_GIT_BRANCH
    else
      git checkout -b $NEETO_CI_GIT_BRANCH -t $branch_origin;
    fi

    checkout::reset_to_sha
  fi
}

function checkout::cache_store() {
  # update cache if older then 72h -> 25920s
  if [ -z ${NEETO_CI_GIT_CACHE_AGE:-""} ]; then
    NEETO_CI_GIT_CACHE_AGE=259200
  fi

  local cache_key=$(cache list 2>&1 | grep git-cache- | awk '{ print $1 }' | head -1)
  local cache_age=$(echo $cache_key | cut -d'-' -f8)

  if [[ ! -z "$cache_age" ]] && [[ $cache_age =~ ^[0-9]+$ ]]; then
    local now=$(date +%s)
    local diff=$(expr $now - $cache_age)
    echo "diff: $diff"
    if (( diff > $NEETO_CI_GIT_CACHE_AGE )); then
      echo "Git cache outdated, refreshing..."
      cd ..
      checkout::cleanupcache
      cache store "git-cache-$NEETO_CI_JOB_ID-`date +%s`" $NEETO_CI_GIT_DIR
      cd $NEETO_CI_GIT_DIR
    else
      echo "Git cache up-to-data."
    fi
  else
    echo "No git cache... caching"
    cd ..
    cache store "git-cache-${NEETO_CI_JOB_ID}-`date +%s`" $NEETO_CI_GIT_DIR
    cd $NEETO_CI_GIT_DIR
  fi
}

function checkout::cleanupcache {
  if [ -z ${NEETO_CI_GIT_CACHE_KEEP:-""} ]; then
    NEETO_CI_GIT_CACHE_KEEP=0
  fi
  local k=$NEETO_CI_GIT_CACHE_KEEP
  local list=($(cache list 2>&1 | grep git-cache- | awk '{ print $1 }' | xargs))

  for i in ${list[@]:$k}; do
    cache delete $i
  done

}

function checkout::checkrevision {
  git rev-list HEAD..$NEETO_CI_GIT_SHA 2>/dev/null
  if [ $? -ne 0 ]; then
    echo "Revision: ${NEETO_CI_GIT_SHA} not found .... Exiting"
    return 1
  fi
}

function checkout::branch_checkout {
  git checkout -f "$NEETO_CI_GIT_BRANCH"
  if [ $? -ne 0 ]; then
    echo "Branch: ${NEETO_CI_GIT_BRANCH} not found .... Exiting"
    return 1
  fi
}

function checkout::shallow() {
  if [ -z ${NEETO_CI_GIT_DEPTH:-""} ]; then
    NEETO_CI_GIT_DEPTH=50
  fi
  echo "Performing shallow clone with depth: $NEETO_CI_GIT_DEPTH"
  retry git clone --depth $NEETO_CI_GIT_DEPTH -b $NEETO_CI_GIT_BRANCH $NEETO_CI_GIT_URL $NEETO_CI_GIT_DIR
  if [ $? -ne 0 ]; then
    echo "Branch not found performing full clone"
    retry git clone $NEETO_CI_GIT_URL $NEETO_CI_GIT_DIR
    cd "$NEETO_CI_GIT_DIR"
    checkout::branch_checkout
    if [ $? -ne 0 ]; then
      return 1
    fi

    checkout::checkrevision
    if [ "$?" -eq "0" ]; then
      git reset --hard $NEETO_CI_GIT_SHA 2>/dev/null
    else
      return 1
    fi
  else
    cd $NEETO_CI_GIT_DIR
    git reset --hard $NEETO_CI_GIT_SHA 2>/dev/null
    if [ $? -ne 0 ]; then
      echo "SHA: $NEETO_CI_GIT_SHA not found performing full clone"
      retry git fetch --unshallow
      checkout::checkrevision
      if [ "$?" -eq "0" ]; then
        git reset --hard $NEETO_CI_GIT_SHA 2>/dev/null
      else
        return 1
      fi
    fi
  fi

  checkout::metric "$(du -s . | awk '{ print $1 }')"
}

function checkout::refbased() {
  if [ -z ${NEETO_CI_GIT_DEPTH:-""} ]; then
    NEETO_CI_GIT_DEPTH=50
  fi

  if [ ${NEETO_CI_GIT_REF_TYPE:-""} = "pull-request" ]; then
    retry git clone --depth $NEETO_CI_GIT_DEPTH $NEETO_CI_GIT_URL $NEETO_CI_GIT_DIR
    cd $NEETO_CI_GIT_DIR
    retry git fetch origin +$NEETO_CI_GIT_REF: 2>/dev/null
    if [ $? -ne 0 ]; then
      echo "Revision: ${NEETO_CI_GIT_SHA} not found .... Exiting"

      return 1
    else
      git checkout -qf FETCH_HEAD
      echo "HEAD is now at ${NEETO_CI_GIT_SHA}"

      return 0
    fi
  fi

  if [ ${NEETO_CI_GIT_REF_TYPE:-""} = "tag" ]; then
    retry git clone --depth $NEETO_CI_GIT_DEPTH -b $NEETO_CI_GIT_TAG_NAME $NEETO_CI_GIT_URL $NEETO_CI_GIT_DIR
    if [ $? -ne 0 ]; then
      echo "Release $NEETO_CI_GIT_TAG_NAME not found .... Exiting"

      return 1
    else
      cd $NEETO_CI_GIT_DIR
      git checkout -qf $NEETO_CI_GIT_TAG_NAME
      echo "HEAD is now at ${NEETO_CI_GIT_SHA} Release ${NEETO_CI_GIT_TAG_NAME}"

      return 0
    fi
  fi

  checkout::shallow
}

function checkout::metric() {
  if [[ "${NEETO_CI_TOOLBOX_METRICS_ENABLED:-''}" == "true" ]]; then
    ref_type=${NEETO_CI_GIT_REF_TYPE:-""}
    size=${1:-"0"}
    [[ $size -gt 0 ]] && status='success' || status='fail'
    echo "libcheckout,provider='$NEETO_CI_GIT_PROVIDER',reftype='$ref_type',status=$status size=$1" >> /tmp/toolbox_checkout
  fi
}

export -f checkout
